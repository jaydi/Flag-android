<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tankers.smile.activities.ShopsActivity" >

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/list_shops_shops"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green_blue"
        android:divider="@color/transparent"
        android:dividerHeight="3dp"
        android:listSelector="@color/transparent"
        android:paddingLeft="1.5dp"
        android:paddingRight="1.5dp" />

    <ProgressBar
        android:id="@+id/progressbar_shops_loading"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true" />

</FrameLayout>