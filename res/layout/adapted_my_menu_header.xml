<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    android:paddingTop="30dp" >

    <ImageView
        android:layout_width="177dp"
        android:layout_height="66dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background_my_menu_header" />

    <LinearLayout
        android:id="@+id/linear_my_menu_header_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:visibility="gone" >

        <TextView
            android:id="@+id/text_my_menu_header_sign_up"
            android:layout_width="120dp"
            android:layout_height="24dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/selector_red_round"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/join"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_my_menu_header_sign_in"
            android:layout_width="120dp"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/selector_blood_round"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>