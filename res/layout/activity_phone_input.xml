<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_blue"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context="com.tankers.smile.activities.PhoneInputActivity" >

    <EditText
        android:id="@+id/edit_phone_input_locale"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/background_white_box"
        android:inputType="phone"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/edit_phone_input_phone1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/background_white_box"
            android:inputType="phone"
            android:maxLength="3"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_phone_input_phone2"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/background_white_box"
            android:inputType="phone"
            android:maxLength="4"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_phone_input_phone3"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/background_white_box"
            android:inputType="phone"
            android:maxLength="4"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_green_blue"
        android:clickable="true"
        android:gravity="center"
        android:onClick="goToVerification"
        android:text="@string/get_ver_code"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/message_phone_number_why"
        android:textColor="@color/white" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/button_phone_input_skip"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_green_blue"
            android:clickable="true"
            android:gravity="center"
            android:onClick="skipPhoneInput"
            android:text="@string/skip"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </FrameLayout>

</LinearLayout>