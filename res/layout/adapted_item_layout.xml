<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="263dp"
    android:focusable="true"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:background="@color/white" >

            <ImageView
                android:id="@+id/image_item_profile_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/image_item_sale_1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="top|right"
                android:layout_margin="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_sale"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <LinearLayout
                android:id="@+id/linear_item_like_it_box_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:clickable="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/image_item_like_it_1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_smile_on"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/image_item_like_it_not_1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_smile_off"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/text_item_like_it_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/image_item_scannable_1"
                android:layout_width="45dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical|right"
                android:scaleType="fitXY"
                android:src="@drawable/ic_scannable"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/image_item_scanned_1"
                android:layout_width="45dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical|right"
                android:scaleType="fitXY"
                android:src="@drawable/ic_scanned"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="3dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/linear_adapted_item_layout_second"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="invisible" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:background="@color/white" >

            <ImageView
                android:id="@+id/image_item_profile_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/image_item_sale_2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="top|right"
                android:layout_margin="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_sale"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <LinearLayout
                android:id="@+id/linear_item_like_it_box_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:clickable="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/image_item_like_it_2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_smile_on"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/image_item_like_it_not_2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_smile_off"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/text_item_like_it_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/image_item_scannable_2"
                android:layout_width="45dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical|right"
                android:scaleType="fitXY"
                android:src="@drawable/ic_scannable"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/image_item_scanned_2"
                android:layout_width="45dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical|right"
                android:scaleType="fitXY"
                android:src="@drawable/ic_scanned"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>