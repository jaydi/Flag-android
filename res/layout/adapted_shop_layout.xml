        <!--
             <View
            android:layout_width="1dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent_green_blue" />
        -->

        <LinearLayout
            android:id="@+id/button_adapted_shop_checkin_reward"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_yellow"
            android:clickable="true"
            android:gravity="center"
            android:visibility="gone" >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_checkin_reward" />

            <TextView
                android:id="@+id/text_adapted_shop_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_adapted_shop_checkin_rewarded"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/yellow"
            android:clickable="true"
            android:gravity="center"
            android:visibility="gone" >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_checkin_rewarded" />

            <TextView
                android:id="@+id/text_adapted_shop_rewarded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rewarded"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_adapted_shop_checkin_reward_not"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:visibility="gone" >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_checkin_reward_not" />

            <TextView
                android:id="@+id/text_adapted_shop_reward_not"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white" />
        </LinearLayout>

        <!--
             <View
            android:layout_width="1dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent_green_blue" />
        -->

        <LinearLayout
            android:id="@+id/button_adapted_shop_map"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_transparent_red_button"
            android:clickable="true"
            android:gravity="center" >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_map_red" />

            <TextView
                android:id="@+id/text_adapted_shop_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>