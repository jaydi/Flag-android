<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/light</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:actionBarTabStyle">@style/CustomTab</item>
        <item name="android:actionBarTabBarStyle">@style/CustomTab.Bar</item>
        <item name="android:actionBarTabTextStyle">@style/CustomTab.Text</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
    </style>

    <style name="CustomActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/background_actionbar</item>
        <item name="android:titleTextStyle">@style/CustomActionBar.TitleTextStyle</item>
    </style>

    <style name="CustomActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">30dp</item>
    </style>

    <style name="CustomTab" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/selector_tab</item>
        <item name="android:showDividers">none</item>
    </style>

    <style name="CustomTab.Bar" parent="@android:style/Widget.Holo.Light.ActionBar.TabBar">
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerPadding">0dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="CustomTab.Text" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FullScreenTheme" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="NoDimTheme" parent="AppTheme">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- My Page -->
    <style name="SimpleSettingsButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:background">@drawable/selector_white</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="MyPageButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:paddingBottom">39.5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MyPageButtonImage">
        <item name="android:layout_width">46dp</item>
        <item name="android:layout_height">34.5dp</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
        <item name="android:layout_marginTop">39.5dp</item>
        <item name="android:clickable">false</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="SettingsButton" parent="MyPageButton">
        <item name="android:paddingBottom">14dp</item>
    </style>

    <style name="SettingsButtonImage" parent="MyPageButtonImage">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginTop">14dp</item>
    </style>

</resources>